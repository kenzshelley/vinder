<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".VoiceRecordActivity">

    <EditText
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_email_field" />

    <Button
        android:text="@string/start_record_voice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_email_field"
        android:id="@+id/record_voice_button"/>

    <Button
        android:text="@string/start_play_voice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/record_voice_button"
        android:id="@+id/play_voice_button"/>

    <Button
        android:text="@string/send_voice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_voice_button"
        android:id="@+id/send_voice_button"/>

</RelativeLayout>
